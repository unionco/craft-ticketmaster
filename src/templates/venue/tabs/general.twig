{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Venue Id",
    instructions: "### Do not edit this field"|md,
    value: venue.tmVenueId,
    name: "fields[tmVenueId]",
    errors: venue.getErrors('tmVenueId'),
    required: true
}) }}

{{ forms.textField({
    label: "URL",
    name: "fields[payload][url]",
